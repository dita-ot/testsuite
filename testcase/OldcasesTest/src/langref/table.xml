         <table frame="all">
            <tgroup cols="2">
               <colspec colname="col1" colwidth="3*"/>
               <colspec colname="col2" colwidth="2*"/>
               <thead>
                  <row>
                     <entry valign="top" colname="col1">Animal</entry>
                     <entry valign="top" colname="col2">Gestation Period</entry>
                  </row>
               </thead>
               <tbody>
                  <row>
